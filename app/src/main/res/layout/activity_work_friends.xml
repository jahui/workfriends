<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WorkFriends"
    android:background="#35B6EE">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_alignRight="@+id/editText"
            android:inputType="text"
            android:autoText="false"
            android:textColor="#ff696969"
            android:background="@android:drawable/edit_text"
            android:hint="Email Account"
            android:layout_above="@+id/editText"
            android:layout_alignLeft="@+id/editText" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:width="300dp"
            android:layout_marginBottom="200dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#ff696969"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:hint="Password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_label"
            android:id="@+id/textView3"
            android:textStyle="bold"
            android:textSize="48dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/account_label"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:textColor="#ffffffff"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:onClick="onClickSignUp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/forgot_label"
            android:id="@+id/textView5"
            android:layout_marginTop="45dp"
            android:textColor="#ffffffff"
            android:clickable="true"
            android:onClick="onClickForgot"
            android:layout_alignTop="@+id/editText"
            android:layout_alignRight="@+id/editText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/login_button"
            android:id="@+id/button"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView5"
            android:width="300dp"
            android:onClick="onClickLogin"
            android:background="@android:drawable/btn_default"
            android:textColor="#ff696969" />


    </RelativeLayout>
