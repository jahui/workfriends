<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#35B6EE">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profile_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/jedan_face" />


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/profile_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/jedan_face" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jedan Garcia"
        android:id="@+id/user_name"
        android:textSize="30dp"
        android:layout_below="@+id/profile_img"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:typeface="normal"
        android:textColor="#ffdf80" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Application Developer"
        android:id="@+id/user_position"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Financials: Settlements"
        android:id="@+id/textView"
        android:layout_below="@+id/user_position"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About Me:"
        android:id="@+id/aboutme"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:layout_below="@+id/textView"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="San Ramon, CA"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/aboutme"
        android:layout_toEndOf="@+id/user_position"
        android:layout_marginTop="5dp"
        android:textColor="#ffdf80"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi! I love closing pipeline blockers and and having conversations about the future, looking to meet more people outside of my department."
        android:id="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_below="@+id/aboutme"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_marginTop="15dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="Say Hi!"
        android:id="@+id/button2"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:onClick="onSayHiClick"/>

</RelativeLayout>